<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.probashiincltd.probashilive.viewmodels.RTMPCallViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.LiveActivity">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/containers">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/camera_view"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/options"
            app:layout_constraintTop_toBottomOf="@id/containers"
            app:layout_constraintBottom_toTopOf="@id/commentEDT"
            tools:listitem="@layout/single_comment"
            app:reverseLayout="true"
            android:adapter="@{viewModel.adapter}"
            app:layoutManager=".ui.RTMPCall$WrapContentLinearLayoutManager"
            android:id="@+id/commentLayout"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:hint="Comment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/commentLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/commentEDT"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_8sdp"
            app:layout_constraintEnd_toStartOf="@id/send"
            android:background="@drawable/edittextbg"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/send"
            android:onClick="@{viewModel::onClickSend}"
            app:layout_constraintStart_toEndOf="@id/commentEDT"
            app:layout_constraintTop_toTopOf="@id/commentEDT"
            app:layout_constraintBottom_toBottomOf="@id/commentEDT"
            app:layout_constraintEnd_toStartOf="@id/options"

            android:layout_marginStart="@dimen/_8sdp"
            android:id="@+id/send"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/uparrow"
            android:onClick="@{viewModel::onClickSend}"
            app:layout_constraintStart_toEndOf="@id/send"
            app:layout_constraintTop_toTopOf="@id/commentEDT"
            app:layout_constraintBottom_toBottomOf="@id/commentEDT"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/options"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
